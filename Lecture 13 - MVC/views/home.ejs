<%- include('partials/head') %>
</head>
<body class="bg-gray-50">
  <%- include('partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-5xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-8">
      Here are our registered homes:
    </h2>
    <ul class="flex flex-wrap justify-between gap-6">
      <% registeredHomes.forEach(home => { %>
        <li class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300 flex-1 max-w-[calc(33.333%-1rem)]">
          <img 
            src="<%= home.imageUrl %>" 
            alt="<%= home.houseName %>" 
            class="w-full h-40 object-cover rounded-t-lg mb-4"
          />
          <div class="px-2">
            <h3 class="text-lg font-bold text-gray-800"><%= home.houseName %></h3>
            <p class="text-sm text-gray-600 mb-2"><%= home.address %></p>
            <p class="text-sm text-gray-600">Price: <span class="text-red-500 font-semibold"><%= home.PricePerNight %></span></p>
            <p class="text-sm text-gray-600">Rating: <span class="text-yellow-500 font-semibold"><%= home.rating %>â˜…</span></p>
          </div>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
